<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="10dp"
	>

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/contributor_title"
		style="@style/TextStyle_header"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="@string/contributors"
		android:textColor="@color/black"
		android:textSize="30sp"
		app:layout_constraintBottom_toTopOf="@+id/contributor_description"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		/>

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/contributor_description"
		style="@style/TextStyle_stats_description"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:text="@string/contributors_description"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@+id/contributor_list"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/contributor_title"
		/>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/contributor_list"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/contributor_description"
		/>


</androidx.constraintlayout.widget.ConstraintLayout>